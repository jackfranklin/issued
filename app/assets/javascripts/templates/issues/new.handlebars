<form role="form" {{action "newIssue" on="submit"}}>
  <div class="form-group">
    <label>Title</label>
    {{input type="text" value=title class="form-control"}}
  </div>
  <div class="form-group">
    <label>Description</label>
    {{textarea value=description class="form-control"}}
  </div>
  <div class="form-group">
    <label>Assignee</label>
    {{input type="text" value=assignee_id class="form-control"}}
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
